<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <set>
            <objectAnimator android:interpolator="@android:interpolator/decelerate_quint" android:duration="@android:integer/config_shortAnimTime" android:valueTo="0.9" android:propertyName="scaleX" />
            <objectAnimator android:interpolator="@android:interpolator/decelerate_quint" android:duration="@android:integer/config_shortAnimTime" android:valueTo="0.9" android:propertyName="scaleY" />
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:interpolator="@android:interpolator/decelerate_quint" android:duration="@android:integer/config_shortAnimTime" android:valueTo="1.0" android:propertyName="scaleX" />
            <objectAnimator android:interpolator="@android:interpolator/decelerate_quint" android:duration="@android:integer/config_shortAnimTime" android:valueTo="1.0" android:propertyName="scaleY" />
        </set>
    </item>
</selector>
